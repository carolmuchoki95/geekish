<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="googlemaps.com.searchrecyclerview.Activity_Student_Dashboard">


    <Button
        android:id="@+id/lectures"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_round_button"
        android:text="Lectures"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    />

    <Button
        android:id="@+id/assignments"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBaseline="@+id/register"
        android:layout_alignBottom="@+id/register"
        android:layout_alignLeft="@+id/lectures"
        android:layout_alignStart="@+id/lectures"
        android:layout_marginLeft="5dp"
        android:background="@drawable/custom_round_button"

        android:text="Assignments"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/noticeboard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBaseline="@+id/lectures"
        android:layout_alignBottom="@+id/lectures"
        android:layout_alignEnd="@+id/register"
        android:layout_alignRight="@+id/register"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/custom_round_button"
        android:text="Notice board"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <Button

        android:id="@+id/register"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/custom_round_button"
        android:text="Units registration"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/noticeboard"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
