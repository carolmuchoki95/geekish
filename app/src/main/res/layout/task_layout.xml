<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/txt_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:hint="Activity" />

    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_activity"
        android:layout_alignStart="@+id/txt_activity"
        android:layout_below="@+id/txt_activity"
        android:layout_marginTop="30dp"
        android:hint="Time" />

    <TextView

        android:id="@+id/txt_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Venue"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/txt_time"
        android:layout_alignLeft="@+id/txt_time"
        android:layout_alignStart="@+id/txt_time" />



</RelativeLayout>